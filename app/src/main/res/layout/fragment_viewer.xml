<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="name.gaudat.panda.ViewerFragment">

    <!-- TODO: Update blank fragment layout -->

    <view android:layout_width="match_parent"
          android:layout_height="match_parent"
          class="com.polites.android.GestureImageView" android:id="@+id/image" android:layout_gravity="center"
            />
    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/thumb" android:layout_gravity="center"
            />
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading" android:layout_gravity="center"/>
</FrameLayout>
