<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:orientation="horizontal"
                      >
    <RelativeLayout  android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">

    <ImageButton
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/listtype"
            android:layout_below="@+id/listdetail" android:layout_alignLeft="@+id/listdetail"
            android:layout_alignStart="@+id/listdetail"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetching..."
            android:id="@+id/listtitle" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp" android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="Please wait"
            android:id="@+id/listdetail"
            android:layout_below="@+id/listtitle" android:layout_alignLeft="@+id/listtitle"
            android:layout_alignStart="@+id/listtitle"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listrating" android:layout_alignBottom="@+id/listtype"
            android:layout_toRightOf="@+id/listtype" android:layout_toEndOf="@+id/listtype"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"/>

    </RelativeLayout>
    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/listthumb"
            />
</LinearLayout>